<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Properties>
    <Property name="filename">delimeat</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{DEFAULT} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
    <!--
    <File name="File" fileName="logs/delimeat.log">
      <PatternLayout pattern="%d{DEFAULT} [%t] %-5level %logger{36} - %msg%n " />
    </File>
	 !-->
    <RollingFile name="RollingFile" fileName="${log}/${filename}.log" filePattern="${log}/${filename}-%d{yyyy-MM-dd}-%i.log.gz" >
      <PatternLayout pattern="%d{DEFAULT} [%t] %-5level %logger{36} - %msg%n" />
      <Policies>
        <!--
        <SizeBasedTriggeringPolicy size="1 KB" />
			!-->
      </Policies>
      <!--
      <DefaultRolloverStrategy max="7"/>
		!-->
    </RollingFile>
  </Appenders>
  <Loggers>
    <logger name="io.delimeat" level="ALL" additivity="false">
      <AppenderRef ref="Console" />
      <AppenderRef ref="File" />
      <AppenderRef ref="RollingFile" />
    </logger>
    <logger name="org.glassfish.jersey" level="ALL" additivity="false">
      <AppenderRef ref="Console" />
      <AppenderRef ref="File" />
      <AppenderRef ref="RollingFile" />
    </logger>
    <Root level="ERROR" additivity="false">
      <AppenderRef ref="Console" />
      <AppenderRef ref="File" />
      <AppenderRef ref="RollingFile" />
    </Root>
  </Loggers>
</Configuration>