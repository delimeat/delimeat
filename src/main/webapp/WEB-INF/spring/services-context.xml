http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd">
	
	<bean id="configServiceId" class="io.delimeat.core.service.ConfigService_Impl">
        <property name="configDao" ref="configDaoId"/>
	</bean>
  
	<bean id="showServiceId" class="io.delimeat.core.service.ShowService_Impl">
        <property name="showDao" ref="showDaoId"/>
        <property name="guideDao" ref="tvdbGuideDaoId"/>
    </bean>
    
    <bean id="guideServiceId" class="io.delimeat.core.service.GuideService_Impl">

      	<property name="infoDao" ref="tvdbGuideDaoId"/>
    	<property name="searchDao" ref="tvdbGuideDaoId"/>
		<!--
    	<property name="infoDao" ref="tvmazeGuideDaoId"/>
    	<property name="searchDao" ref="tvmazeGuideDaoId"/>
    	!-->    	

    </bean>
  
	<bean id="processorExecutorId" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
	    <!--
	    <property name="corePoolSize" value="1" />
	    <property name="maxPoolSize" value="10" />
	    <property name="queueCapacity" value="25" />
	    !-->	
	</bean>
	
	<bean id="processorServiceId" class="io.delimeat.core.service.ProcessorService_Impl">
        <property name="showDao" ref="showDaoId"/>
        <property name="configDao" ref="configDaoId"/>
        <property name="guideProcessorFactory" ref="guideProcessorFactoryId"/>
        <property name="feedProcessorFactory" ref="feedProcessorFactoryId"/>
        <property name="executor" ref="processorExecutorId"/>
    </bean>
    


</beans>