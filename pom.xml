								</configuration>
							</execution>
				
							<execution>
								<id>npm install</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>npm</goal>
								</goals>
								<configuration>
									<arguments>install</arguments>
								</configuration>
							</execution>
				
							<execution>
								<id>bower install</id>
								<phase>prepare-package</phase>
								<goals>
