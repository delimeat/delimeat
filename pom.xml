		<org.eclipse.persistence.version>2.6.2</org.eclipse.persistence.version>
		<org.apache.derby.version>10.12.1.1</org.apache.derby.version>

		<org.glassfish.jersey.version>2.22.2</org.glassfish.jersey.version>

		<org.jsoup.version>1.8.3</org.jsoup.version>
		<com.google.guava.version>19.0</com.google.guava.version>
		<commons-codec.version>1.10</commons-codec.version>
	</properties>

