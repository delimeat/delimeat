		<org.eluder.coveralls.version>4.1.0</org.eluder.coveralls.version>
		<!-- Servelet versions ! -->
		<javax.servlet.version>3.1.0</javax.servlet.version>

		<!-- Transaction versions ! -->
		<javax.transaction.version>1.2</javax.transaction.version>

		<!-- Logging versions ! -->
		<org.slf4j.version>1.7.18</org.slf4j.version>
		<org.apache.logging.log4j.version>2.5</org.apache.logging.log4j.version>
		<org.apache.commons.logging.version>1.2</org.apache.commons.logging.version>

		<!-- Runtime versions ! -->
